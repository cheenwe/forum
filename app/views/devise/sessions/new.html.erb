<div class="app-auth-container">
  <h2><%= t('.sign_in') %></h2>

  <%= form_for(:user, as: :user, url: session_path(:user)) do |f| %>
    <div class="field">
      <%= f.label :email do%>
        <span>邮箱</span>
      <% end %>
      <%= f.email_field :email, autofocus: true  %>
    </div>

    <div class="field">
      <%= f.label :password do %>
        <span>密码</span>
      <% end %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if Devise.mappings[:user].rememberable? %>
      <div class="field">
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %>
          <span>记住我的登录状态</span>
        <% end %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t('.sign_in') %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
